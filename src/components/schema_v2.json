          "type": "array",
          "items": { "type": "string", "enum": ["user", "admin", "manager"] },
          "description": "List of role names (for RJSF forms)"
        },
        "permissions": {
          "type": "array",
          "items": { "type": "string", "enum": ["read", "write", "delete"] },
          "description": "Admin-specific permissions"
        }
      },
      "required": ["id", "email", "hashed_password"],
